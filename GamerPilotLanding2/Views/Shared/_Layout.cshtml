<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] GamerPilot</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <!-- fav icon in browser -->
    <link rel="icon" type="image/x-icon" href="/images/gp-brand.png">

</head>
<body>
    <nav class="navbar navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar top-bar"></span>
                <span class="icon-bar middle-bar"></span>
                <span class="icon-bar bottom-bar"></span>
            </button>
            <a class="navbar-brand" asp-controller="home" asp-action="index">
                <img src="images/gp-logo-c.png" height="38" alt="GamerPilot Logo" />
            </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-navbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a asp-controller="Home" asp-action="Parents" class="nav-links">Til forældrene</a></li>
            </ul>

            @{

                //Get the current action name, so we can redirect to it on submit
                var action = ViewContext.RouteData.Values["Action"];
                <form asp-controller="Home" asp-action="Subscribe" method="post" class="nav navbar-form navbar-right"  asp-route-returnUrl="@action">
                    <div class="form-group">
                        <input type="email" name="email" class="form-control input-sub" placeholder="få tidlig adgang">
                    </div>
                    <button type="submit" class="btn-blue btn-sub">Kom på listen</button>
                </form>

            }

        </div>
        <!-- /.navbar-collapse -->
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - GamerPilotLanding2</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
